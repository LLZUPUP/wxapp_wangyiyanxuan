.container {
    height: 100%;
    width: 100%;
    display: flex;
    background-color: #f4f4f4;
    box-sizing: border-box;
}
.foo_buycar {
    width: 100%;
    height: 98rpx;
    background-color: #fafafa;
    display: flex;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    border: 1rpx solid #d7d7d7;
    z-index: 99;
}
.foo_buycar navigator {
    height: 98rpx;
    width: 98rpx;
    line-height: 98rpx;
    text-align: center;
    border-right: 1rpx solid #d7d7d7;
}
.foo_buycar image {
    height: 40rpx;
    width: 40rpx;
}
.navbuy {
    width: 220rpx;
}
.navbuy,.addcar {
    line-height: 98rpx;
    text-align: center;
}
.addcar {
    background-color: #b52628;
    color: #fff;
    flex: 1;
}
.pdt_img {
    height: 740rpx;
    width: 100%;
    position: relative;
}
.pdt_image {
    height: 740rpx;
    width: 100%;
}
.img_text {
    position: absolute;
    top: 688rpx;
    right: 28rpx;
    color: #000;
    width: 54rpx;
    line-height: 28rpx;
    text-align: center;
    background-color: #fff;
    font-size: 22rpx;
}
.pdt_info {
    width: 100%;
    height: 250rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 28rpx;
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
}
.info_title,info_ide {
    line-height: 70rpx;
}
.info_title {
    color: #313131;
    font-size: 1rem;
    font-weight: 500;
}
.info_ide {
    color: #c5c5c5;
    font-weight: normal;
    font-size: 0.8rem;
    font-family: Arial, Helvetica, sans-serif;
}
.info_bd {
    padding-top: 30rpx;
}
.info_price {
    font-size: 1.2rem;
    color: red;
    float: left;
    line-height: 72rpx;
}
.info_des {
    color: #c5c5c5;
    font-size: 0.7rem;
    float: right;
    line-height: 72rpx;
}
/* actionsheet页面样式 */
.actionbgc {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index:90;
    background-color: rgba(0,0,0,.4);
}
.actionsheet.show {
    transform: translateY(0rpx);
}

.actionsheet {
    z-index: 91;
    width: 100%;
    height: 968rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    transform: translateY(100%);
    transition: transform .3s;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
}
.action_hd {
    display: flex;
    margin-bottom: 44rpx;
}
.actcancel {
    height: 30rpx;
    width: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.modImg {
    height: 175rpx;
    width: 175rpx;
    background-color: #f4f4f4;
}
.modText {
    height: 175rpx;
    padding: 70rpx 0 0 20rpx;
    box-sizing: border-box;
    font-size: .9rem;
}
.modPrice {
    color: #b4282d;
}
.tt {
    margin-bottom: 20rpx;
}
.con {
    margin-bottom: 50rpx;
}
.weui-flex {
    flex-wrap: wrap;
}
.weui-check__label {
    display: flex;
    height: 54rpx;
    text-align: center;
    border: 1px solid #d9d9d9;
    border-radius: 10rpx;
    justify-content: center;
    align-items: center;
    margin-right: 30rpx;
    padding: 20rpx 30rpx;
}
.weui-check__label text {
    display: inline-block;
}
.weui-check__label.checked {
    border-color: #b4282d;
    color: #b4282d;
}
.drop,.add {
    display: inline-block;
    width: 90rpx;
    height: 66rpx;
    text-align: center;
    line-height: 66rpx;
    border: 1rpx solid #ccc;
}
.num {
    display: inline-block;
    width: 129rpx;
    line-height: 66rpx;
    text-align: center;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc; 
}
/* actionsheet页面end */
.model {
    line-height: 104rpx;
    font-size: .8rem;
}
.pdt_server {
    height: 180rpx;
    display: block;
    box-sizing: border-box;
}
.server_box {
    float: left;
}
.server {
    font-size: .7rem;
    margin: 0 50rpx 10rpx 0;
    white-space: normal;
    padding-left: 15rpx;
    display: inline-block;
    text-align: left;
    position: relative;
}
.left {
    margin-right: 20rpx;
    float: left;
    font-size: .8rem;
    line-height: 55rpx;
}
.right {
    float: right;
    width: 550rpx;
    padding: 0;
    box-sizing: border-box;
}
.server:before {
    content: '';
    height: 10rpx;
    width: 10rpx;
    background-color: #b4282d;
    border-radius: 50%;
    position: absolute;
    left: -5rpx;
    top: 50%;
    margin-top: -5rpx;
}
/* 服务actionsheet样式 */
.actser {
    height: 742rpx;
    padding: 0;
    z-index: 100;
}
.actser .server_tit {
    line-height: 114rpx;
    text-align: center;
    border-bottom: 1rpx solid #d7d7d7;
}
.actser .server_content {
    box-sizing: border-box;
    padding: 22rpx 28rpx 40rpx;
}
.actser .content_se {
    padding-left: 15rpx;
    color: #7d7d7d;
}
.scroll_server {
    height: 625rpx;
}
.content_tt {
    font-size: .9rem;
}

